<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:background="?attr/backgroundColor">

        <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/Input_background"
            android:gravity="right|center_vertical|bottom"
            android:maxLength="12"
            android:padding="10dp"
            android:textColor="?attr/Input_textColor"
            android:textSize="48sp"
            tools:text="15"/>

<!-- 1 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnThemes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:foreground="@drawable/ic_themes_24"
                android:foregroundGravity="center"
                android:textColor="?attr/Operator_Button_color" />

            <Button
                android:id="@+id/btnBackspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:foreground="@drawable/ic_backspace_24"
                android:foregroundGravity="center"
                android:onClick="onBackspace"
                android:textColor="?attr/Operator_Button_color" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onClear"
                android:text="clr"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnMultiple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onOperator"
                android:text="*"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

        </LinearLayout>

        <!-- 2 row -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="7"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />


            <Button
                android:id="@+id/btnEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="8"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="9"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onOperator"
                android:text="/"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />
        </LinearLayout>

        <!-- 3 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="4"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="5"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="6"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onOperatorSubtract"
                android:text="-"
                android:textSize="18dp"
                android:textColor="?attr/Button_Text_color" />

        </LinearLayout>

        <!-- 4 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="1"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="2"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="3"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onOperator"
                android:text="+"
                android:textSize="18dp"
                android:textColor="?attr/Button_Text_color" />

        </LinearLayout>

        <!-- 5 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDecimalPoint"
                android:text="."
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnNull"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"

                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="?attr/Button_Color"
                android:onClick="onDigit"
                android:text="0"
                android:textSize="@dimen/number_text_size"
                android:textColor="?attr/Button_Text_color" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="2"
                android:background="?attr/Button_Color"
                android:onClick="onEqual"
                android:text="="
                android:textSize="18dp"
                android:textColor="?attr/Button_Text_color" />

            </LinearLayout>
</LinearLayout>